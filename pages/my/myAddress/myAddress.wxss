/* pages/my/myAddress/myAddress.wxss */
.address-box{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: flex-start
}
.address-lists{
  width: calc(100% - 44px);
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: flex-start;
  margin: 10px 15px;
  background: rgb(241, 229, 229);
  border-radius: 5px;
  padding: 8px 7px;

}
.address-box .address-lists .address-baseinfo{
  width: 75%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: flex-start
}
.address-box .address-lists .address-baseinfo text{
  color: #333;
  font-size: 13px;
  padding-bottom: 5px;
}
.address-box .address-lists .address-status{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center
}
.address-box .address-lists .address-status button{
 font-size: 13px;
}

/* 添加地址按钮 */
.add-address{
  position: fixed;
  bottom: 10%;
  right: 10%;
}
.url-add{
  width: 50px;
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: red;
  border-radius: 50%;
}

.url-add text{
  font-size: 13px;
  color: #fff;
}