.add-address-box{
  width: 100%;
  padding: 35px 0;
}
.form-sub{
  width: calc(100% - 14px);
  padding: 0 7px;
  display: flex;
  flex-direction: column;
  align-content: flex-start;
  justify-content: flex-start;
}
.section{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  justify-content: flex-start;
  margin-bottom: 15px;
  border-bottom:1px solid rgba(235, 226, 226, 0.7);
  padding: 5px 0;
}
.section .section__title{
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  color: #333;
  font-size: 13px;
}
.section input{
  width: 70%;
  color: #666;
  font-size: 13px;
}

.radio-group label radio{
  transform:scale(0.5);
}
.btn-area{
  margin-top: 30px;
}
.picker{
  color: #666;
  font-size: 13px;
}
