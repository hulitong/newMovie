/* swiper css */
swiper{
  width: 100%;
  height: 150px;
}
swiper swiper-item{
  width: 100%;
  height: 150px;
}
swiper swiper-item image{
  width: 100%;
  height: 150px;
}

/* gride template */
.gride{
  width: 100%;
  height: 90px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: center;
}
.gride .gride-url{
  width: 25%;
  height: 90px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.gride .gride-url image{
  width: 50px;
  height: 50px;
}
.gride .gride-url text{
  font-size: 13px;
  color: #333;
  margin-top: 7px;
}


/* movielist template */
.movielist{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.movie-url{
  width: calc(100% - 14px);
  height: 95px;
  padding: 7px 7px;
  border-bottom: 1px solid rgba(218, 211, 211, 0.7);
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
}
.movie-url .movie-img{
  width: 18%;
  height: 95px;
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
}
.movie-url .movie-img image{
  width: 100%;
  height: 95px;
}
.movie-url .movie-world{
  width: calc(66% - 10px);
  height: 95px;
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
  align-content: center;
  padding:0 5px;
}

.movie-url .movie-world text{
  color: #333;
  font-size: 13px;
  line-height: 1.5rem;
}
.movie-url .movieName{
  font-size: 15px;
  font-weight: bold;
  color: #000;
}
.movie-url .pingfeng{
  color: #999;
}
.movie-url .zhuyan{
  color: #333;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp:1;
  -webkit-box-orient: vertical;
}
.buy-btn{
  width: 16%;
  height: 95px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.buy-btn button{
  width: 60px;
  height: 25px;
  line-height: 34px;
  padding:2px 4px;
  color: #fff;
  font-size: 13px;
  background: #f00;
  border-radius: 5px;
  text-align: center;
}